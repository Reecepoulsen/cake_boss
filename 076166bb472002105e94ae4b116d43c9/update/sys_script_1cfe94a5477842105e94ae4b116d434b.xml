        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    // Get all offerings in this order
    var orderGR = current.order.getRefRecord();
    var offeringsToOrdersGR = new GlideRecord("x_1128327_cake_offerings_to_orders");
    offeringsToOrdersGR.addQuery("order", orderGR.getValue("sys_id"));
    offeringsToOrdersGR.query();

    // Calculate the price of all offerings in this order
    var total = 0;
    while (offeringsToOrdersGR.next()) {
        var offeringGR = offeringsToOrdersGR.offering.getRefRecord();
        var price = parseFloat(offeringGR.getValue("total_price"));
        var quantity = offeringsToOrdersGR.getValue("quantity");
        total += (price * quantity);
    }

    // Update the base price of the order
    orderGR.base_price = total.toFixed(2);
	orderGR.update();

})(current, previous);]]></script>
