        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    // Get all ingredients for this good
    var goodGR = current.good.getRefRecord();
    var ingredientsToGoodGR = new GlideRecord("x_1128327_cake_ingredients_to_goods");
    ingredientsToGoodGR.addQuery("good", goodGR.getValue("sys_id"));
    ingredientsToGoodGR.query();

    // Calculate the ingredient cost of the good
    var total = 0;
    while (ingredientsToGoodGR.next()) {
        var ingredientGR = ingredientsToGoodGR.ingredient.getRefRecord();
        var price = parseFloat(ingredientGR.getValue("price"));
        var quantity = ingredientsToGoodGR.getValue("quantity");
        total += (price * quantity);
    }

    // Update the ingredient cost of the good
    goodGR.ingredient_cost = total.toFixed(2);
	goodGR.update();

})(current, previous);]]></script>
